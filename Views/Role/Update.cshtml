@model FarmProduceManagement.Models.Dtos.UpdateRoleRequestModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Role";
}


<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">
        <div class="text-center"><h3>@ViewData["Title"]</h3></div>

   
        <div style="width: 40%; margin: auto">
            <div style="color:red">@TempData["message"]</div>
            <div>
                <form asp-action="Update">
                    <div>
                        <label asp-for="RoleName"></label>
                        <input type="text" asp-for="RoleName" class="form-control">
                        <span asp-validation-for="RoleName"></span>
                    </div>
                    <div style="margin-bottom: 3mm;">
                        <label asp-for="RoleDescription"></label>
                        <input type="text" asp-for="RoleDescription" class="form-control">
                        <span asp-validation-for="RoleDescription"></span>
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" value="Submit" />
                    </div>

                </form>
            </div>
        </div>

    </div>

</div>


