@model FarmProduceManagement.Models.Dtos.RoleDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">
        <div>
            @{
                <p>Are sure you want to delete this role?</p>
            }
            <ul>
                <li>
                    <form asp-action="Delete">
                        <input class="btn btn-danger" type="submit" value="Yes" />
                    </form>
                </li>
                <li>
                   <div> <a asp-controller="Role" asp-action="List">No</a></div>
                </li>
            </ul>
        </div>
    </div>

</div>



