@model IEnumerable<FarmProduceManagement.Models.Dtos.CategoryDto>
@{
    ViewData["Title"] = "Category List";
}

<div class="">
    <div class="row">
        <div class="col-md-2 border" style="min-height: 520px; padding: 0px; margin: 0px">
            @await Html.PartialAsync("~/Views/User/Menu.cshtml")
        </div>
        <div class="row col-md-10 pt-3">
            <div>@TempData["message"]</div>
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <span class="text-center"><h3>@ViewData["Title"]</h3></span>
                <table class="table table-bordered table-striped table-responsive">
                    <thead>
                        <tr>
                            @* <th>Id</th> *@
                            <th>S/N</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count() > 0)
                        {
                            var serialNumberCount = 1;
                            foreach (var category in Model)
                            {
                                <tr>
                                    <td>@serialNumberCount</td>
                                    <td>@category.NameOfCategory</td>
                                    <td>@category.DescriptionOfCategory</td>
                                    <td><a asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Update</a></td>
                                    <td><a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Remove</a></td>
                                </tr>
                                serialNumberCount++;
                            }
                        }
                        else{
                            <tr>
                                <td class="text-center" colspan="5">
                                    Not found!
                                </td>
                            </tr>
                        }
                    </tbody>
                    <div>

                    </div>
                </table>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>
