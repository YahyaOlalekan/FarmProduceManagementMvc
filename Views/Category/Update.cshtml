@model FarmProduceManagement.Models.Dtos.UpdateCategoryRequestModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">

        <div>
            <div>@TempData["message"]</div>
            <div>
                <form asp-action="Update">
                    <div>
                        <label asp-for="NameOfCategory"></label>
                        <input type="text" asp-for="NameOfCategory">
                        <span asp-validation-for="NameOfCategory"></span>
                    </div>
                    <div>
                        <label asp-for="DescriptionOfCategory"></label>
                        <input type="text" asp-for="DescriptionOfCategory">
                        <span asp-validation-for="DescriptionOfCategory"></span>
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" value="Submit" />
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>



