@model FarmProduceManagement.Models.Dtos.ProductDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">
        <div>
            @{
                <p>Are sure you want to delete this produce?</p>
            }
            <ul>
                <li>
                    <form asp-action="Delete">
                        <input class="btn btn-danger" type="submit" value="Yes" />
                    </form>
                </li>
                <li>
                    <a asp-controller="Produce" asp-action="List">No</a>
                </li>
            </ul>
           
        </div>
    </div>

</div>


