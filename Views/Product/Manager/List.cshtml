@model IEnumerable<FarmProduceManagement.Models.Dtos.ProductDto>


<div>
    <table class="table table-bordered table-striped table-responsive">
        <thead>
            <tr>
                @* <th>Id</th> *@
                <th>S/N</th>
                <th>Produce Name</th>
                @* <th>Quantity</th> *@
                @* <th>Cost Price</th> *@
                <th>Selling Price</th>
                <th>Unit Of Measurement</th>
                <th>Name Of Category</th>
                @* <th>Update</th>
                <th>Delete</th> *@
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                var serialNumberCount = 1;
                foreach (var produce in Model)
                {
                    <tr>
                        <td>@serialNumberCount</td>
                        <td>@produce.Produce.ProduceName</td>
                        @* <td>@produce.QuantityToBuy</td> *@
                        @* <td>@Math.Round(produce.CostPrice, 4)</td> *@
                        <td>@Math.Round(produce.SellingPrice, 4)</td>
                        <td>@produce.UnitOfMeasurement</td>
                        <td>@produce.NameOfCategory</td>
                        @* <td><a asp-action="Update" asp-controller="Produce" asp-route-id="@produce.Id">Update</a></td>
                        <td><a asp-action="Delete" asp-controller="Produce" asp-route-id="@produce.Id">Remove</a></td> *@
                    </tr>
                    serialNumberCount++;
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">
                        Not found!
                    </td>
                </tr>
            }
        </tbody>
        <div>

        </div>
    </table>
</div>



