                        </li>
                        </ul> *@
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @{
                                var role = User.FindFirst(ClaimTypes.Role)?.Value;
                                if( role == "Admin" || role == "Manager")
                                {
                                    <a class="nav-link text-dark" href="#" id="CompanyBalance">0.00</a>
                                    @* <div style="min-width: 400px;">&nbsp;</div> *@
                                }
                            }
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <div style="min-width: 400px;">&nbsp;</div>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @* <li class="nav-item" style="align-self: center;">
                                @if (true)
                                {
                                    <img style="width:40px;height:40px">
                                }
                            </li> *@
                            <li class="nav-item">
                                <u><a class="nav-link text-dark">Hello @User.Identity?.Name!</a></u>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline">
                                    <button asp-controller="User" asp-action="Logout" class="nav-link btn btn-link text-white">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <select name="Registration" id="Registration">
                                
                             <option value="">
                                Registeration
                            </option>

                             <option value="Farmer">
                                <a class="text-dark" asp-controller="Farmer" asp-action="Register">Register as Farmer</a>
                            </option>
                            
                            <option value="Customer">
                                <a class="text-dark" asp-controller="Customer" asp-action="Register">Register as Customer</a>
                            </option>     
                                                   
                           </select>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>


        </nav>
    </header>
