@using FarmProduceManagement.Models.Dtos;
@model IEnumerable<FarmerDto>;
@{
    ViewData["Title"] = "List Of Pending Approval Farmers";
}
<div>
    <div class="pt-4">
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <div class="text-center">
                    <h3>@ViewData["Title"]
                </div>
                </h3>
                <tr>
                    <!-- <th>Id</th>-->
                    <th>S/N</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Registration Number</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Action</th>
                    @* <th>Details</th> *@

                </tr>
            </thead>
            <tbody>
                @if(Model.Count() > 0){

                    var countSerialNumber = 1;
                    foreach (var farmers in Model)
                    {
                        <tr>
                            @* <td>@farmers.UserId</td> *@
                            <td>@countSerialNumber</td>
                            <td>@farmers.FirstName</td>
                            <td>@farmers.LastName</td>
                            <td>@farmers.RegistrationNumber</td>
                            <td>@farmers.PhoneNumber</td>
                            <td>@farmers.Address</td>
                            <td>
                                @* <form action="Verify">
                                    <input type="hidden" name="Id" value="farmers.Id">
                                    <input type="hidden" name="Approve" value="2">
                                    <button>Not Verify</button>
                                </form> *@
                                <form asp-action="Verify">
                                    <input type="hidden" name="Id" value="@farmers.UserId">
                                    <input type="hidden" name="Status" value="2">
                                    <button type="submit" class="btn btn-primary">Verify</button>
                                </form>
                            </td>
                            <!-- <td><img src="~/Upload/Images/@farmers.ProfilePicture" height="100" width="100"></td>-->

                            @* <td>
                                <a asp-controller="Farmer" asp-action="Details" asp-route-id="@farmers.Id">View</a>
                            </td> *@

                        </tr>
                        countSerialNumber++;
                    }

                }
                else{
                    <tr>
                        <td colspan="6" class="text-center">No Data</td>
                    </tr>
                }

            </tbody>
            <div>

            </div>
           
        </table>
    </div>
</div>
