@using FarmProduceManagement.Models.Dtos;
@model IEnumerable<FarmerDto>;
@{
    ViewData["Title"] = "Pending Approval Farmers";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @* ViewData["Title"] = "Pending Approval Farmers"; *@
}

@* <div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div> *@
<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">

        <div>
            <div class="pt-4">
                <table class="table table-bordered table-striped table-responsive">
                    <thead>
                        <div class="text-center">
                            <h3>@ViewData["Title"]
                        </div>
                        </h3>
                        <tr>
                            <!-- <th>Id</th>-->
                            <th>S/N</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Registration Number</th>
                            <th>Phone Number</th>
                            <th>Address</th>
                            <th>Action</th>
                            @* <th>Details</th> *@

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {

                            var countSerialNumber = 1;
                            foreach (var farmers in Model)
                            {
                                <tr>
                                    @* <td>@farmers.UserId</td> *@
                                    <td>@countSerialNumber</td>
                                    <td>@farmers.FirstName</td>
                                    <td>@farmers.LastName</td>
                                    <td>@farmers.RegistrationNumber</td>
                                    <td>@farmers.PhoneNumber</td>
                                    <td>@farmers.Address</td>
                                    <td>
                                        <form asp-action="Verify">
                                            <input type="hidden" name="Id" value="@farmers.Id">
                                            <input type="hidden" name="Status" value="2">
                                           <button class="btn btn-warning">Decline</button>
                                        </form>
                                         &nbsp;
                                        <form asp-action="Verify">
                                            <input type="hidden" name="Id" value="@farmers.Id">
                                            <input type="hidden" name="Status" value="3">
                                            <button class="btn btn-primary">Verify</button>
                                        </form>
                                    </td>
                                    <!-- <td><img src="~/Upload/Images/@farmers.ProfilePicture" height="100" width="100"></td>-->

                                    @* <td>
                            <a asp-controller="Farmer" asp-action="Details" asp-route-id="@farmers.Id">View</a>
                            </td> *@

                                </tr>
                                countSerialNumber++;
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No Data</td>
                            </tr>
                        }

                    </tbody>
                    <div>

                    </div>

                </table>
            </div>
        </div>

    </div>

</div>


