@model FarmProduceManagement.Models.Dtos.FundWalletRequestModel
@{Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Fund Wallet";}

<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
        @* <div> <partial name="User/Menu.cshtml"></div> *@
    </div>

    <div class="col-md-10">
        <div class="text-center"><h3>@ViewData["Title"]</h3></div> 
        <div style="width: 40%; margin: auto" class="">
         <div style="color: red">@TempData["message"]</div>
        <form asp-action="Wallet">
         <div class="form-group mb-1">
            <label asp-for="Amount"></label>
            <input type="number" asp-for="Amount" class="form-control" placeholder="Amount" >
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
         <div>
           <input class="btn btn-primary" type="submit" value="Submit"/>
        </div>
        </form>
        </div>
    </div>

    @section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}