@using FarmProduceManagement.Models.Dtos;
@model IEnumerable<CustomerDto>;
@{
    ViewData["Title"] = "List Of Customers";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @* ViewData["Title"] = "List Of Customers"; *@
}

@* <div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div> *@
<div class="row">
    <div class="col-md-2">
        <div>@await Html.PartialAsync("~/Views/User/Menu.cshtml")</div>
    </div>
    <div class="col-md-10">

        <div>
            <div class="pt-4">
                <table class="table table-bordered table-striped table-responsive">
                    <thead>
                        <div class="text-center">
                            <h3>@ViewData["Title"]
                        </div>
                        </h3>
                        <tr>
                            <!-- <th>Id</th>-->
                            <th>S/N</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Registration Number</th>
                            <th>Phone Number</th>
                            <th>Address</th>
                            <th>Details</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var countSerialNumber = 1;
                            foreach (var customers in Model)
                            {
                                <tr>
                                    <!--<td>@customers.Id</td>-->
                                    <td>@countSerialNumber</td>
                                    <td>@customers.FirstName</td>
                                    <td>@customers.LastName</td>
                                    <td>@customers.RegistrationNumber</td>
                                    <td>@customers.PhoneNumber</td>
                                    <td>@customers.Address</td>
                                    <!-- <td><img src="~/Upload/Images/@customers.ProfilePicture" height="100" width="100"></td>-->

                                    <td>
                                        <a asp-controller="Customer" asp-action="Details" asp-route-id="@customers.Id">View</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Customer" asp-action="Update" asp-route-id="@customers.Id">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customers.Id">Remove</a>
                                    </td>

                                </tr>
                                countSerialNumber++;
                            }

                        }

                    </tbody>
                    <div>
                    </div>
                </table>
            </div>
        </div>

    </div>

</div>


