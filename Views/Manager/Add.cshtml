@using FarmProduceManagement.Models.Dtos;
@model CreateManagerRequestModel;
@{
    ViewData["Title"] = "Add Manager";
     Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="row">
        <div class="col-md-2 border" style="min-height: 520px; padding: 0px; margin: 0px">
            @await Html.PartialAsync("~/Views/User/Menu.cshtml")
        </div>
        <div class="row col-md-10 pt-3">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <span class="text-center"><h3>@ViewData["Title"]</h3></span>
                
               <div>@ViewBag.Message</div>
                <form asp-action="Add" enctype="multipart/form-data">
            <div>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" type="text" />
                 <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" type="text" />
                 <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" type="telephone" />
                 <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div>
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" type="email" />
                 <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                 <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" type="address" />
                 <span asp-validation-for="Address"></span>
            </div>
           
            <div>
                <label asp-for=" ProfilePicture"></label>
                <input asp-for=" ProfilePicture" class="form-control" type="file" />
                <span asp-validation-for=" ProfilePicture" class="text-danger"></span>
            </div>
            <div class="mt-2 text-end">
                <button type="submit" class="btn btn-primary" style="width: 30%">Add Manager</button>
            </div>
        </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


